<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator Sederhana!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/input_num1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="168dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_num2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="100dp"
        android:layout_height="61dp"
        android:layout_marginTop="335dp"
        android:layout_marginBottom="167dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/but_add"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="464dp"
        android:layout_marginEnd="252dp"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/but_times"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#780E32" />

    <Button
        android:id="@+id/but_times"
        android:onClick="method"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="108dp"
        android:text="x"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but_add"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#780E32" />

    <Button
        android:id="@+id/but_divide"
        android:onClick=""
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="108dp"
        android:text=":"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but_min"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#780E32" />

    <Button
        android:id="@+id/but_min"
        android:onClick=""
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="464dp"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/but_divide"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/but_divide"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#780E32" />

</androidx.constraintlayout.widget.ConstraintLayout>